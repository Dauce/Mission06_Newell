@model Movie
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Input: Title, Year, Director, Rating, Edited, Lent To, Notes -->
<!DOCTYPE html>

<h1 class="text-center my-4">Add A Movie</h1>

<div class="container">
    <form method="post" class="p-4 border rounded bg-light shadow">
        
        <input type="hidden" asp-for="MovieId">
        
        <div class="mb-3">
            <label asp-for="Title">Movie Title</label>
            <input asp-for="Title" required/>
        </div>

        <div class="mb-3">
            <select asp-for="CategoryId">
                <option value="">Category</option>
                @foreach (Category m in ViewBag.Categories)
                {
                    <option value="@m.CategoryId">@m.CategoryName</option>
                }
            </select>
        </div>
        
        <div class="mb-3">
            <label asp-for="Year">Year</label>
            <input asp-for="Year" type="number" min="1888" required/>
        </div>
        
        <div class="mb-3">
            <label asp-for="Director">Director</label>
            <input asp-for="Director"/>
        </div>
        
        <div class="mb-3">
            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating">
                <option value="g">G</option>
                <option value="pg">PG</option>
                <option value="pg-13">PG-13</option>
                <option value="r">R</option>
                <option value="not-rated">Not-Rated</option>
            </select>
        </div>
       
        <div class="mb-3">
            <label asp-for="Edited">Edited</label>
            <select asp-for="Edited" required>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
       
        <div class="mb-3">
            <label asp-for="LentTo">Lent To</label>
            <input asp-for="LentTo"/>
        </div>
        
        <div class="mb-3">
            <label asp-for="CopiedToPlex">Copied To Plex</label>
            <select asp-for="CopiedToPlex" required>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        
        <div class="mb-3">
            <label asp-for="Notes">Notes</label>
            <input asp-for="Notes" maxlength="25"/>
        </div>
        
        <button type="submit" class="btn btn-primary w-100">Submit Movie</button>
    </form>
</div>